{
    "name": "@coderscamp2020-hk/project-fullstack-server",
    "version": "0.1.0",
    "description": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/CodersCamp2020-HK/CodersCamp2020.Project.FullStack-Node-React/tree/master/server"
    },
    "keywords": [],
    "author": "CodersCamp2020",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/CodersCamp2020-HK/CodersCamp2020.Project.FullStack-Node-React/issues"
    },
    "homepage": "https://github.com/CodersCamp2020-HK/CodersCamp2020.Project.FullStack-Node-React/tree/master/server#readme",
    "scripts": {
        "prebuild": "rimraf build",
        "server:dev": "concurrently \"nodemon --watch \"src/presentation/rest/**/*Controller.ts\" --ext \"ts,js\" -x npx tsoa spec-and-routes\" \"nodemon --ignore \"src/presentation/rest/**/*Controller.ts\" --ignore \"src/presentation/web/**/*\" -r tsconfig-paths/register src/server.ts\"",
        "server:dev:debug": "concurrently \"nodemon --watch \"src/presentation/rest/**/*Controller.ts\" --ext \"ts,js\" -x npx tsoa spec-and-routes\" \"nodemon --ignore \"src/presentation/rest/**/*Controller.ts\" --ignore \"src/presentation/web/**/*\" --exec node --inspect-brk=9229 -r ts-node/register -r tsconfig-paths/register src/server.ts\"",
        "server:build": "npm run prebuild && tsoa spec-and-routes && tsc -p tsconfig-build.json && cp ./tsconfig*.json ./build/",
        "server:start": "cross-env TS_NODE_PROJECT=build/tsconfig-build.json node -r tsconfig-paths/register ./build/src/server.js",
        "server:test": "jest",
        "server:test:cov": "jest --coverage",
        "server:test:dev": "jest --watch",
        "server:lint": "eslint --ignore-path .gitignore --ignore-path .eslintignore --fix .",
        "server:format": "prettier --ignore-path .gitignore --ignore-path .eslintignore --write \"{src,test}/**/*.{js,ts,json}\"",
        "tools:generate-client": "java -jar tools/generate-client/swagger-codegen-cli.jar generate -i src/presentation/rest/generated/swagger.json -l typescript-fetch -o src/presentation/web/src/client",
        "tools:web-copy": "node tools/web-copy/index.js",
        "web:dev": "npm run start --prefix src/presentation/web",
        "web:build": "npm run build --prefix src/presentation/web",
        "web:test": "npm run test --prefix src/presentation/web",
        "build": "npm run server:build && npm run tools:generate-client && npm run web:build && npm run tools:web-copy",
        "dev": "concurrently \"npm run server:dev\" \"nodemon --watch\"src/presentation/rest/generated/swagger.json\" --ext \"json\" -x npm run tools:generate-client\" \"npm run web:dev\"",
        "test": "npm run server:test && npm run web:test"
    },
    "devDependencies": {
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/node": "^14.14.28",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "concurrently": "^5.3.0",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.5"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "express": "^4.17.1",
        "shelljs": "^0.8.4",
        "swagger-ui-express": "^4.1.6",
        "tsconfig-paths": "^3.9.0",
        "tsoa": "^3.5.2",
        "typescript-ioc": "^3.2.2"
    }
}
