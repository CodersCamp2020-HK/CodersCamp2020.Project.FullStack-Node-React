    "mail": "Meghan26@yahoo.com",
    "password": "ZAQ!2wsx"
}

### Auth token
@authToken = {{login.response.body.apiKey}}
@adminToken = {{adminLogin.response.body.apiKey}}

### Get adoption form
GET {{baseUrl}}/forms/2
access_token: {{authToken}}

### Post adoption form
POST {{baseUrl}}/adoptionSubmissions/add
access_token: {{authToken}}
Content-Type: application/json

{
    "animalId": 2,
    "stepNumber": 1,
    "answers": [
        {
            "questionId": 3,
            "answer": {
                "type": "checkbox",
                "answer": "Tak"
            }
        },
        {
            "questionId": 4,
            "answer": {
                "type": "checkbox",
                "answer": "Nie"
            }
        }
    ]
}

### Get submissions in progress
GET {{baseUrl}}/adoptionSubmissions?status=accepted
access_token: {{authToken}}

### Accept submission
PUT {{baseUrl}}/adoptionSubmissions/changeAdoptionFormStatus
access_token: {{adminToken}}
Content-Type: application/json

{
    "status": "accepted",
    "submissionId": 4
}