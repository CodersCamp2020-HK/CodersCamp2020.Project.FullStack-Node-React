    },
    "homepage": "https://github.com/CodersCamp2020-HK/CodersCamp2020.Project.FullStack-Node-React/tree/master/server#readme",
    "scripts": {
        "dev": "concurrently \"nodemon --watch \"src/presentation/rest/**/*Controller.ts\" --ext \"ts,js\" -x npx tsoa spec-and-routes\" \"nodemon --ignore \"src/presentation/rest/**/*Controller.ts\" -r tsconfig-paths/register src/server.ts\"",
        "prebuild": "rimraf build",
        "build": "tsoa spec-and-routes && tsc -p tsconfig-build.json && cp ./tsconfig*.json ./build/",
        "start": "cross-env TS_NODE_PROJECT=build/tsconfig-build.json node -r tsconfig-paths/register ./build/src/server.js",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:dev": "jest --watch",
        "lint": "eslint --ignore-path .gitignore --fix .",
        "format": "prettier --ignore-path .gitignore --write \"{src,test}/**/*.{js,ts,json}\""
    },
    "devDependencies": {
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/node": "^14.14.28",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "concurrently": "^5.3.0",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.5"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "express": "^4.17.1",
        "swagger-ui-express": "^4.1.6",
        "tsconfig-paths": "^3.9.0",
        "tsoa": "^3.5.2",
        "typescript-ioc": "^3.2.2"
    }
}
