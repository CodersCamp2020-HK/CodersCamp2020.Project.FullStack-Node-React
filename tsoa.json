{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/presentation/rest/**/*Controller.ts"],
    "spec": {
        "outputDirectory": "src/presentation/rest/generated",
        "specVersion": 3,
        "version": "v1",
        "name": "API Name",
        "description": "API description",
        "contact": {
            "name": "Author Name",
            "email": "Author Email",
            "url": "Contact URL"
        },
        "license": "MIT",
        "basePath": "/api",
        "spec": {
            "servers": [
                {
                    "url": "http://localhost:8000/api"
                }
            ]
        },
        "securityDefinitions": {
            "jwt": {
                "type": "jwt",
                "scopes": {
                    "admin": "manage shelter",
                    "user": "visit shelter",
                    "employee": "works in shelter",
                    "volunteer": "helps to shelter"

                }
            }
        }
    },
    "routes": {
        "routesDir": "src/presentation/rest/generated",
        "basePath": "/api",
        "middleware": "express",
        "authenticationModule": "src/infrastructure/authentication"
    },
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@domain/*": ["domain/*"],
            "@infrastructure/*": ["infrastructure/*"],
            "@presentation/*": ["presentation/*"],
            "@application/*": ["application/*"]
        }
    }
}
