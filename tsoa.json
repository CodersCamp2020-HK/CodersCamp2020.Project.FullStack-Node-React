{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/presentation/rest/**/*Controller.ts"],
    "spec": {
        "outputDirectory": "src/presentation/rest/generated",
        "specVersion": 3,
        "version": "v1",
        "name": "API Name",
        "description": "API description",
        "contact": {
            "name": "Author Name",
            "email": "Author Email",
            "url": "Contact URL"
        },
        "license": "MIT",
        "basePath": "/api",
        "specMerging": "recursive",
        "spec": {
            "servers": [
                {
                    "url": "http://localhost:8000/api"
                }
            ],
            "paths": {
                "/animals/{animalId}/photos-upload": {
                  "post": {
                    "consumes": [
                      "multipart/form-data"
                    ],
                    "parameters": [
                        {
                            "in": "path",
                            "name": "animalId",
                            "type": "number",
                            "required": true
                          },
                      {
                        "in": "formData",
                        "name": "photos",
                        "type": "file",
                        "required": true
                      }
                    ]
                  }
                },
                "/animals/{animalId}/thumbnail-upload": {
                    "post": {
                      "consumes": [
                        "multipart/form-data"
                      ],
                      "parameters": [
                          {
                              "in": "path",
                              "name": "animalId",
                              "type": "number",
                              "required": true
                            },
                        {
                          "in": "formData",
                          "name": "thumbnail",
                          "type": "file",
                          "required": true
                        }
                      ]
                    }
                  }
        }
    },
        "securityDefinitions": {
            "jwt": {
                "type": "apiKey",
                "name": "access_token",
                "in": "header"
            }
        }
    },
    "routes": {
        "routesDir": "src/presentation/rest/generated",
        "basePath": "/api",
        "middleware": "express",
        "authenticationModule": "src/infrastructure/Auth.ts"
    },
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@domain/*": ["domain/*"],
            "@infrastructure/*": ["infrastructure/*"],
            "@presentation/*": ["presentation/*"],
            "@application/*": ["application/*"]
        }
    }
}